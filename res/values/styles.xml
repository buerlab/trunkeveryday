<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="actionbar_title_style" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="actionbar_def_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!-- 在样式里面直接替换掉actionbar的背景，避免在有的窗口进入慢时导致进入时显示系统默认的actionbar -->
        <item name="android:background">@color/deep_sky_blue</item>
        <item name="android:titleTextStyle">@style/actionbar_title_style</item>
        <item name="android:logo">@drawable/menu</item>
        <!-- 在样式里面去掉acionbar的应用图标和标题 -->
        <!--<item name="android:displayOptions">useLogo</item>-->
    </style>

    <style name="actionbutton_def_style" parent="@android:style/Widget.Holo.Light.ActionButton">
        <!--<item name="android:background">@drawable/actionbuttom</item>-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_theme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">#000</item>
        <item name="android:actionBarStyle">@style/actionbar_def_style</item>
        <item name="android:actionButtonStyle">@style/actionbutton_def_style</item>
    </style>
</resources>
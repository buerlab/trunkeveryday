<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:gravity="center_vertical"
              android:id="@+id/comment_wrapper"
              android:layout_height="wrap_content">


       <LinearLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center_horizontal"
                     android:background="@drawable/tanchuang1_full"
                     android:orientation="horizontal">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="50dp"
                          android:gravity="center"
                          android:id="@+id/star_btn_0"
                            android:background="@drawable/radius_star_left_clicked"
                          android:layout_weight="1"
                    >
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/xingxing1"
                        />
                    </LinearLayout>
           <LinearLayout android:layout_width="wrap_content"
                         android:layout_height="50dp"
                         android:gravity="center"
                         android:id="@+id/star_btn_1"
                         android:layout_weight="1"
                   >
               <ImageView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/xingxing2"
                       />
           </LinearLayout>
           <LinearLayout android:layout_width="wrap_content"
                         android:layout_height="50dp"
                         android:gravity="center"
                         android:id="@+id/star_btn_2"
                         android:background="@drawable/star_middle_clicked"
                         android:layout_weight="1"
                   >
               <ImageView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/xingxing2"
                       />
               <ImageView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/xingxing2"
                       />
           </LinearLayout>
           <LinearLayout android:layout_width="wrap_content"
                         android:layout_height="50dp"
                         android:gravity="center"
                         android:id="@+id/star_btn_3"
                         android:background="@drawable/radius_star_right"
                         android:layout_weight="1"
                   >
               <ImageView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/xingxing2"
                       />
               <ImageView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/xingxing2"
                       />
               <ImageView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/xingxing2"
                       />
           </LinearLayout>
        </LinearLayout>


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@drawable/tanchuang2_full">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/comment_group_0"
                      android:orientation="vertical"
                      android:visibility="gone"
                >
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:id="@+id/comment_text_0_1"
                          android:text="1. 货主电话打不通，交易取消。"
                          android:onClick="sendRegCode"
                          android:background="@drawable/clickable_popup_textview"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="2.货主爽约，交易取消。"
                          android:background="@drawable/clickable_popup_textview"
                          android:id="@+id/comment_text_0_2"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="3.货主要求降低运费，谈不拢，交易取消"
                          android:id="@+id/comment_text_0_3"
                          android:background="@drawable/clickable_popup_textview"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/popup_item_wrapper"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="4.我想说..."
                          android:background="@drawable/clickable_popup_textview"
                          android:id="@+id/comment_text_0_other"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/comment_group_1"
                      android:visibility="gone"
                      android:orientation="vertical"
                >
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:id="@+id/comment_text_1_1"
                          android:text="1. 基本满意，但货物比货主描述的多"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="2. 基本满意，但发生了一些费用纠纷"
                          android:id="@+id/comment_text_1_2"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                          android:paddingBottom="2dp"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="3. 基本满意，但货主拖了好久才给付费"
                          android:id="@+id/comment_text_1_3"
                          android:background="@color/popup_comment_clicked_item"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/popup_item_wrapper"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="4. 我想说..."
                          android:background="@drawable/clickable_popup_textview"
                          android:id="@+id/comment_text_1_other"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/comment_group_2"
                      android:visibility="gone"
                      android:orientation="vertical"
                >
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:id="@+id/comment_text_2_1"
                          android:text="1. 挺满意的，货主诚实守信"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="2. 挺满意的，货一到货主就给钱了"
                          android:id="@+id/comment_text_2_2"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="3. 挺满意的，货物与货主描述的一致"
                          android:id="@+id/comment_text_2_3"
                          android:background="@color/popup_comment_clicked_item"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/popup_item_wrapper"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="4.我想说..."
                          android:background="@drawable/clickable_popup_textview"
                          android:id="@+id/comment_text_2_other"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/comment_group_3"
                      android:visibility="visible"
                      android:orientation="vertical"
                >
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:paddingBottom="2dp"
                          android:background="@drawable/popup_item_wrapper_bottom_border"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:id="@+id/comment_text_3_1"
                          android:text="1. 非常满意，货主诚实守信，货物与货主描述的一致，按时付款，希望下次再合作。"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/popup_item_wrapper"
                    >
                <TextView android:layout_width="fill_parent"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="2.我想说..."
                          android:background="@drawable/clickable_popup_textview"
                          android:id="@+id/comment_text_3_other"
                          android:minHeight="50dp"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <EditText android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:minHeight="50dp"
                  android:background="@color/popup_comment_clicked_item"
                  android:paddingLeft="20dp"
                  android:paddingRight="20dp"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:textSize="14sp"
                  android:visibility="gone"
                  android:id="@+id/other_text"
                  android:hint="我想说..."/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_horizontal"
                  android:id="@+id/btn_confirm"
                  android:background="@drawable/tanchuang3"
            >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/white"

                  android:text="确定"
                />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:gravity="center_vertical"

              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="vertical"
                  android:id="@+id/dialog_wrapper"
                  android:layout_height="wrap_content">


       <RelativeLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center_horizontal"
                    android:background="@drawable/tanchuang1"
                     android:orientation="vertical">
           <LinearLayout android:layout_width="fill_parent"
                         android:id="@+id/nickname_wrap"
                         android:gravity="center_horizontal"
                         android:layout_marginTop="10dp"
                         android:paddingBottom="16dp"
                         android:layout_height="wrap_content">
           <TextView android:layout_width="wrap_content"
                     android:textColor="@color/text_color"
                     android:textSize="18sp"
                     android:text="您确定要电话联系 "
                     android:layout_gravity="center_vertical"
                     android:layout_height="wrap_content"/>
               <TextView android:layout_width="wrap_content"
                         android:id="@+id/nickname"
                         android:textColor="@color/main_blue"
                         android:textSize="18sp"
                         android:text="吴师傅"
                         android:layout_gravity="center_vertical"
                         android:layout_height="wrap_content"/>
               <TextView android:layout_width="wrap_content"
                         android:textColor="@color/text_color"
                         android:textSize="18sp"
                         android:text=" 吗？"
                         android:layout_gravity="center_vertical"
                         android:layout_height="wrap_content"/>
           </LinearLayout>
        </RelativeLayout>


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/tanchuang2_full"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="fill_parent"
                        android:background="@drawable/popup_item_wrapper_bottom_border"
                      android:layout_height="50dp"
                      android:paddingLeft="16dp"
                      android:layout_weight="1">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:text="广州•白云区"
                      android:textSize="18sp"
                    />
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:src="@drawable/qt_you1"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:text="深圳•南山区"
                      android:textSize="18sp"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="50dp"
                      android:paddingLeft="16dp"
                      android:background="@drawable/popup_item_wrapper_bottom_border"
                    android:gravity="center_vertical"
                        >
            <TextView android:layout_width="70dp"
                      android:layout_height="wrap_content"
                      android:text="回程时间:"
                      android:textSize="16dp"
                      android:textColor="@color/sub_text_color"/>
            <TextView android:id="@+id/new_bill_price"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2014-06-16"
                      android:textSize="18dp"
                      android:paddingLeft="16dp"
                      android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="50dp"
                      android:paddingLeft="16dp"
                      android:background="@drawable/popup_item_wrapper"
                      android:gravity="center_vertical"
                >
            <TextView android:layout_width="70dp"
                      android:layout_height="wrap_content"
                      android:text="备注:"
                      android:textSize="16dp"
                      android:gravity="right"
                      android:textColor="@color/sub_text_color"/>
            <TextView android:id="@+id/new_bill_price"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1500元"
                      android:textSize="18dp"
                      android:layout_marginLeft="16dp"
                      android:textColor="@color/text_color"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_horizontal"
            >
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/button_yes"
                      android:background="@drawable/tc1"
                      android:gravity="center_horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:gravity="center"

                      android:textSize="20sp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/white"
                      android:text="是"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/button_no"
                      android:background="@drawable/tc2"
                      android:gravity="center_horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:gravity="center"
                      android:textSize="20sp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/white"
                      android:text="否"
                    />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
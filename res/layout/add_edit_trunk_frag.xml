<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#cccccc"
            android:scrollbars="vertical">

<LinearLayout
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#cccccc"
              android:scrollbars="vertical"
              android:padding="15dp">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <EditText android:id="@+id/set_trunk_licensePlate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:hint="车牌号"

                      android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <EditText android:id="@+id/set_trunk_type"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:hint="选择货车类型"
                      android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <EditText android:id="@+id/set_trunk_length"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:hint="车长"
                      android:numeric="decimal"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <EditText android:id="@+id/set_trunk_load"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:hint="载重"
                      android:textColor="#000000"
                      android:numeric="decimal"/>
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="30dp"
                      android:orientation="horizontal">
            <EditText android:id="@+id/set_trunk_license"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:hint="行驶证（选填）"
                      android:textColor="#000000"
                      android:numeric="decimal"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp"
                      android:orientation="horizontal">
            <Button android:id="@+id/add_trunkLicense_pic"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="100dp"
                    android:background="#222"
                    android:text="添加图片"
                    android:layout_height="100dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                        android:text="添加驾驶证照片"
                      android:textSize="23dp"
                      android:textColor="#888"/>
        </LinearLayout>
        <com.buerlab.returntrunk.views.MyGridView
               android:id="@+id/pic_gridview"
               android:layout_marginTop="30dp"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:verticalSpacing="10dp"
               android:horizontalSpacing="10dp"
               android:listSelector="@color/bule_overlay"
               android:scrollbars="none"
               android:numColumns="3" >

               </com.buerlab.returntrunk.views.MyGridView>


</LinearLayout>
    </ScrollView>
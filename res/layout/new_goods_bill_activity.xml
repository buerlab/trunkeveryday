<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/new_bill_goods"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="货物名称"
                  android:textSize="20dp"/>
    </LinearLayout>
    <EditText android:id="@+id/new_bill_weight"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="重量（kg）"
              android:numeric="integer"
              android:textSize="20dp"/>
    <EditText android:id="@+id/new_bill_price"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="期望价格（元）"
              android:numeric="integer"
              android:textSize="20dp"/>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/new_bill_from_text"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:hint="出发地"
                  android:textSize="20dp"
                  android:layout_weight="1"/>
        <Button android:id="@+id/new_bill_from_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:gravity="left"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/new_bill_to_text"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:hint="目的地"
                  android:textSize="20dp"
                  android:layout_weight="1"/>
        <Button android:id="@+id/new_bill_to_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:gravity="left"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/new_bill_time_text"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:hint="出发时间"
                  android:textSize="20dp"
                  android:layout_weight="1"/>
        <Button android:id="@+id/new_bill_time_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:gravity="left"/>
    </LinearLayout>
    <EditText android:id="@+id/new_bill_comment"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="备注"/>
    <Button android:id="@+id/new_bill_activity_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="马上发布"/>
    <LinearLayout android:id="@+id/new_bill_extra_container"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
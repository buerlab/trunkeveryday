<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/background">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/background"
              android:layout_height="match_parent">
    <LinearLayout style="@style/infogroup_group_wrapper">
        <LinearLayout style="@style/infogroup_item_wrapper_with_subborder">
            <EditText android:id="@+id/new_bill_goods"
                      style="@style/infogroup_edit_text"
                      android:hint="货物名称"/>
        </LinearLayout>


        <LinearLayout style="@style/infogroup_item_wrapper_with_subborder">
            <EditText android:id="@+id/new_bill_weight"
                      style="@style/infogroup_edit_text"
                      android:layout_weight="1"
                      android:hint="重量"
                      android:numeric="decimal"/>
            <TextView style="@style/infogroup_sub_text"
                      android:layout_weight="0"
                      android:text="千克"
                    />
        </LinearLayout>
        <LinearLayout style="@style/infogroup_item_wrapper">
            <EditText android:id="@+id/new_bill_price"
                      style="@style/infogroup_edit_text"
                      android:layout_weight="1"
                      android:hint="期望价格"
                      android:numeric="decimal"/>
            <TextView style="@style/infogroup_sub_text"
                      android:layout_weight="0"
                      android:text="米"
                    />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout style="@style/infogroup_group_wrapper">
        <LinearLayout style="@style/infogroup_item_wrapper_with_subborder"
                      android:id="@+id/new_bill_from_btn"
                      android:background="@drawable/clickable_infogroup_item_wrapper_with_sub_border"
                >
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/text_color"
                      android:layout_gravity="center_vertical"
                      android:id="@+id/new_bill_from_text"
                      android:layout_weight="1"
                      android:textSize="16sp"
                      android:hint="选择回程出发地"

                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:src="@drawable/qt_dw"
                    />
        </LinearLayout>
        <LinearLayout style="@style/infogroup_item_wrapper"
                      android:id="@+id/new_bill_to_btn"
                      android:background="@drawable/clickable_infogroup_item_wrapper"
                >
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/text_color"
                      android:layout_gravity="center_vertical"
                      android:id="@+id/new_bill_to_text"
                      android:layout_weight="1"
                      android:textSize="16sp"
                      android:hint="选择回程目的地"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:src="@drawable/qt_dw"
                    />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/infogroup_group_wrapper">
        <LinearLayout style="@style/infogroup_item_wrapper_with_subborder"
                      android:id="@+id/new_bill_time_btn"
                      android:background="@drawable/clickable_infogroup_item_wrapper_with_sub_border"
                >
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/text_color"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="1"
                      android:textSize="16sp"
                      android:id="@+id/new_bill_time_text"
                      android:hint="选择回程时间"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:src="@drawable/qt_you2"
                    />
        </LinearLayout>
        <LinearLayout style="@style/infogroup_item_wrapper_with_subborder"
                      android:id="@+id/new_bill_time_btn"
                      android:background="@drawable/clickable_infogroup_item_wrapper_with_sub_border"
                >
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/text_color"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="1"
                      android:textSize="16sp"
                      android:id="@+id/new_bill_time_text"
                      android:hint="有效期"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/text_color"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="0"
                      android:textSize="16sp"
                      android:id="@+id/new_bill_time_text"
                      android:text="1天"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout style="@style/infogroup_group_wrapper"
            >
        <EditText android:layout_width="fill_parent"
                  android:background="@color/white"
                  android:padding="20dp"
                  android:maxLines="4"
                  android:gravity="top"
                  android:id="@+id/new_bill_comment"
                  android:hint="输入备注信息"
                  android:layout_height="120dp"/>
    </LinearLayout>

    <Button style="@style/clickable_button_with_main_color"
            android:text="马上发布"
            android:id="@+id/new_bill_activity_submit"
            />

</LinearLayout>
</ScrollView>


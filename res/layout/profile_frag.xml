<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:background="#cccccc">
        <LinearLayout android:layout_width="fill_parent"
                      android:id="@+id/edit_nickname"
                      android:layout_height="wrap_content"
                      android:background="@drawable/textview_border"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:height="60dp"
                      android:gravity="center_vertical"
                      android:text="称呼："
                      android:textSize="26dp"

                      android:textColor="#000000"/>
            <TextView android:id="@+id/setting_nickName"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:height="60dp"
                      android:gravity="center_vertical|right"
                      android:text="asdfasdf"
                      android:textSize="26dp"
                      android:textColor="#333"/>

        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="手机号："
                      android:height="60dp"
                      android:gravity="center_vertical|center"
                      android:textSize="26dp"
                      android:textColor="#000000"/>
            <TextView android:id="@+id/setting_phoneNum"                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:height="60dp"
                      android:gravity="center_vertical|right"
                      android:textSize="26dp"
                      android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="常住地："
                      android:height="60dp"
                      android:gravity="center_vertical|center"
                      android:textSize="26dp"
                      android:textColor="#000000"/>
            <TextView android:id="@+id/setting_location"                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:height="60dp"
                      android:gravity="center_vertical|right"
                      android:textSize="26dp"
                      android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="身份证："
                      android:height="60dp"
                      android:gravity="center_vertical|center"
                      android:textSize="26dp"
                      android:textColor="#000000"/>
            <TextView android:id="@+id/setting_IDNum"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:height="60dp"
                      android:gravity="center_vertical|right"
                      android:textSize="26dp"
                      android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="驾驶证："
                      android:height="60dp"
                      android:gravity="center_vertical|center"
                      android:textSize="26dp"
                      android:textColor="#000000"/>
            <TextView android:id="@+id/setting_IDNum"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:height="60dp"
                      android:gravity="center_vertical|right"
                      android:textSize="26dp"
                      android:text="123123123123123123"
                      android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
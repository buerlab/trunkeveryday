                           android:layout_height="wrap_content"
                           android:src="@drawable/qt2_wsh"
                           android:layout_weight="1"
                           android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"

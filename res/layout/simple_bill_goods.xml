<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/bill_container"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="#cccccc">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <TextView android:id="@+id/simple_bill_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="李先生"
                      android:textSize="24dp"
                      android:padding="5dp"
                      android:textColor="#000000"/>
            <TextView android:id="@+id/simple_bill_mat"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="木材"
                      android:textSize="24dp"
                      android:padding="5dp"
                      android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:id="@+id/simple_bill_from"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="深圳"
                      android:textSize="20dp"
                      android:textColor="#000000"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="-->"
                      android:textSize="20dp"
                      android:padding="5dp"
                      android:textColor="#000000"/>
            <TextView android:id="@+id/simple_bill_to"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="广州"
                      android:textSize="20dp"
                      android:textColor="#000000"/>
        </LinearLayout>
        <TextView android:id="@+id/simple_bill_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2:00"
                  android:textSize="20dp"
                  android:padding="5dp"
                  android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>
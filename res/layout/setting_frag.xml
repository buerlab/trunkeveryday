        <LinearLayout style="@style/infogroup_group_wrapper"
                      android:id="@+id/push_switch"
                      android:background="@drawable/clickable_infogroup_group_wrapper"
                >
            <LinearLayout style="@style/infogroup_item_wrapper">
                <TextView style="@style/infogroup_main_text"
                          android:layout_weight="1"
                          android:text="消息推送"
                        />
                <org.jraf.android.backport.switchwidget.Switch
                        android:id="@+id/setting_push"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/infogroup_group_wrapper"
                      android:id="@+id/gps_switch"
                      android:background="@drawable/clickable_infogroup_group_wrapper"
                >
            <LinearLayout style="@style/infogroup_item_wrapper">
                <TextView style="@style/infogroup_main_text"
                          android:layout_weight="1"
                          android:text="开启位置信息"
                        />
                <org.jraf.android.backport.switchwidget.Switch
                        android:id="@+id/setting_locate"
                        android:layout_width="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>

        <Button style="@style/clickable_button_with_main_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"

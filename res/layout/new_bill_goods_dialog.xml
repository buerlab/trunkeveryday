<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="新建车单"
              android:textSize="20dp"/>
    <EditText android:id="@+id/new_bill_dialog_mat"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="货物名"/>
    <EditText android:id="@+id/new_bill_dialog_from"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="出发"/>
    <EditText android:id="@+id/new_bill_dialog_to"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="目的"/>
    <EditText android:id="@+id/new_bill_dialog_weight"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="重量（kg）"
              android:numeric="integer"/>
    <EditText android:id="@+id/new_bill_dialog_price"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="期望价格(元)"
              android:numeric="integer"/>
    <EditText android:id="@+id/new_bill_dialog_comment"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="备注"/>
    <!--<DatePicker android:id="@+id/new_bill_dialog_date"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"/>-->
    <TimePicker android:id="@+id/new_bill_dialog_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
</LinearLayout>